generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  message   String
  type      String
  createdAt DateTime @default(now()) @map("created_at")
  updateAt DateTime  @map("updated_at")
  deleteAt DateTime  @map("deleted_at")
}

model Topic {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  createdAt DateTime @default(now()) @map("created_at")
  updateAt DateTime  @map("updated_at")
  deleteAt DateTime  @map("deleted_at")
}

model Email {
  id      String     @id @default(auto()) @map("_id") @db.ObjectId
  subject String
  emailCC String[]
  emailTo String[]
  html String?
  content String?
  createdAt DateTime @default(now()) @map("created_at")
  updateAt DateTime  @map("updated_at")
  deleteAt DateTime  @map("deleted_at")
}