{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "paths": {
      "apps/*": ["./apps/*"],
      "@ecommerce-utilities": ["libs/ecommerce-utilities/src/index.ts"],
      "libs/*": ["./libs/*"],
      "prisma-order": ["libs/prisma-order/src/index.ts"],
      "prisma-user": ["libs/prisma-user/src/index.ts"]
    },
    "outDir": "./dist",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  }
}
